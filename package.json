{
  "name": "simple-sparkline-chart",
  "version": "0.1.0",
  "source": "src/index.ts",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build --no-cache --log-level verbose",
    "format": "prettier --write ."
  },
  "targets": {
    "esmodule": {
      "outputFormat": "esmodule",
      "distDir": "./dist/esmodule",
      "source": "src/esmodule.ts",
      "optimize": false,
      "engines": {
        "browsers": "> 0.2%, last 2 versions, not dead"
      }
    },
    "commonjs": {
      "outputFormat": "commonjs",
      "distDir": "./dist/commonjs",
      "optimize": true,
      "source": "src/commonjs.ts",
      "engines": {
        "node": ">= 12"
      }
    },
    "global": {
      "outputFormat": "global",
      "distDir": "./dist/global",
      "optimize": true,
      "source": "src/global.ts",
      "engines": {
        "browsers": "> 0.2%, last 2 versions, not dead"
      }
    }
  },
  "author": "",
  "license": "MIT",
  "description": "Simple SparkLine Chart",
  "devDependencies": {
    "@parcel/compressor-brotli": "^2.12.0",
    "@parcel/compressor-gzip": "^2.12.0",
    "@parcel/optimizer-esbuild": "^2.12.0",
    "@parcel/optimizer-terser": "^2.12.0",
    "@parcel/packager-ts": "2.12.0",
    "@parcel/transformer-typescript-types": "2.12.0",
    "@parcel/validator-typescript": "^2.12.0",
    "@types/node": "^22.7.4",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
