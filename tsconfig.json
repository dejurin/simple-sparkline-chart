{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "lib": ["DOM", "ESNext"],
    "types": ["node", "jest", "jest-environment-jsdom"]
  },
  "include": ["src/**/*", "src/__tests__"],
  "exclude": ["node_modules", "**/__tests__/**"]
}
